        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        
        .hex {
            transition: fill 0.3s;
        }
        
        .hex:hover {
            filter: brightness(1.2);
        }
        
        .locomotive {
            pointer-events: none;
        }
